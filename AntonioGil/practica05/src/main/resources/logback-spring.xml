<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

    <appender name="lineParseErrorLogger" class="ch.qos.logback.core.FileAppender">
        <file>./log/batch01-parse_errors.log</file>
        <append>false</append>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <appender name="acceptedLineLogger" class="ch.qos.logback.core.FileAppender">
        <file>./log/batch01-accepted_lines.log</file>
        <append>false</append>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.viewnext.batch01.step.listener.TramoReadLogger#parseErrorLog">
        <appender-ref ref="lineParseErrorLogger"/>
    </logger>

    <logger name="com.viewnext.batch01.step.chunk.TramoSetWriter#outputLog">
        <appender-ref ref="acceptedLineLogger"/>
    </logger>

    <root level="info">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
